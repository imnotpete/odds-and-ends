
import sys
import SimpleHTTPServer
import SocketServer

# minimal web server.  serves files relative to the
# current directory.

port = 8100

if len(sys.argv) == 2:
        port = int(sys.argv[1])

handler = SimpleHTTPServer.SimpleHTTPRequestHandler

httpd = SocketServer.TCPServer(("", port), handler)

print "serving at port", port
httpd.serve_forever()
